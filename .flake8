[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (handled by isort)
    F841,  # local variable assigned but never used
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    .mypy_cache,
    node_modules,
    migrations,
    fonts,
    06_Assets,
    k8s
per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F811
    conftest.py:F401,F811
max-complexity = 10
docstring-convention = google