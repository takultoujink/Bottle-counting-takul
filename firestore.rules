rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow authenticated users to read and write bottles data
    match /bottles/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write live_count data
    match /live_count/{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to read and write history data
    match /history/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}